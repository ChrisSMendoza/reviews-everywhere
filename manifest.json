{
  "manifest_version": 2,
  "name": "Reviews Everywhere",
  "version": "0.0",

  "description": "Provides reviews to any website",

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "//": "TODO: Probably should be firefox-extension.js...",
      "js": ["dist/main.js"],
      "css": ["src/style.css"]
    }
  ],

  "permissions": ["https://jsonplaceholder.typicode.com/posts/1"]
}
